<h1>Picture一覧</h1>

<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @pictures.each do |picture| %>
  <tr>
    <td><%= picture.image %></td>
    <td><%= picture.content %></td>
		<td><%= picture.user %></td>

		<td><%= link_to '詳細を確認する', picture_path(picture.id) %></td>
    <td><%= link_to "投稿する", edit_picture_path(picture.id) %></td>
    <td><%= link_to '投稿を削除する', picture_path(picture.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>
</table>
<%= link_to '新しく写真を投稿する', new_picture_path %>